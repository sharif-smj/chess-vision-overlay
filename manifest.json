{
  "manifest_version": 3,
  "name": "Chess Vision Overlay",
  "version": "0.1.0",
  "description": "Detect chess positions from YouTube videos with real-time computer vision + Stockfish analysis",
  "permissions": ["activeTab", "sidePanel", "storage"],
  "host_permissions": ["*://*.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["src/content/index.ts"],
      "css": ["src/content/styles.css"]
    }
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "side_panel": {
    "default_path": "src/panel/panel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": "icons/icon48.png",
    "default_title": "Chess Vision Overlay"
  },
  "web_accessible_resources": [
    {
      "resources": ["models/*", "workers/*"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}
